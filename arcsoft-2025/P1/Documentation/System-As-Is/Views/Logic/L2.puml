@startuml "Logic View Level 2"
' Layout + look
top to bottom direction
skinparam componentStyle uml2
skinparam linetype ortho

skinparam component {
    BackgroundColor LightBlue
    BorderColor Black
    FontSize 12
}

skinparam interface {
    BackgroundColor White
    BorderColor Black
}

skinparam package {
    BackgroundColor LightBlue
    BorderColor Black
}


' External interface
interface "Rest API" as RestAPI

' System boundary - Main container with stereotype
package "<<component>>\nLibrary Management System (BackEnd)" as LMS {

    ' Internal components with stereotypes
    component "<<component>>\nBackEnd" as Backend
    component "<<component>>\nDatabase" as Database

    ' Internal connection
    Backend --> Database : API DB
}

' External connection to the system boundary
RestAPI --> LMS

caption Logic View (Level 2)
@enduml